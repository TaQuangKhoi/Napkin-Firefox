{
  "manifest_version": 2,
  "name": "Napkin Collect",
  "version": "1.0",
  "description": "Send thought to Napkin.one.",
  "icons": {
    "32": "icons/napkin-favicon.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icons/napkin-favicon.png",
    "theme_icons": [{
      "light": "icons/napkin-favicon.png",
      "dark": "icons/napkin-favicon.png",
      "size": 32
    }],
    "default_title": "Napkin Collect",
    "default_popup": "popup/choose_beast.html"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "clipboardWrite"
  ]
}